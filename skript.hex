input.onButtonPressed(Button.A, function () {
    Zahl = randint(0, 20)
    if (Zahl > VZahl) {
        Punkte += 1
        basic.showNumber(Zahl)
    }
    if (VZahl > Zahl) {
        Punkte += -1
        basic.showNumber(Zahl)
    }
    if (Zahl == VZahl) {
        Punkte += 0
